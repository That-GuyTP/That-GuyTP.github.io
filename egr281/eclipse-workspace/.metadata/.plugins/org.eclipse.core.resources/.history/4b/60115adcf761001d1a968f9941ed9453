public class Project11ColoredDie {

//Fields
	private String color;
	private int currentDiceRoll;
	
//Constant

	
//Constructors
	public Project11ColoredDie(int newColor) {
		this.setColor(newColor);
		this.setDiceRoll(0);

	}//EOC constructor
	
//METHODS
	public String getColor() {
		return this.color;
	}//EOC getColor
	
	private void setColor(String newColor) {
		this.color = newColor;
	}//EOC setColor;
	
	public int getDiceRoll() {
		return this.currentDiceRoll;
	}//EOC getDiceRoll
	
	private void setDiceRoll(int newDiceRoll) {
		this.currentDiceRoll = newDiceRoll;
	}//EOC setDiceRoll
	
	public String roll(int update) {
		String rv = this.getDiceRoll() + " has been rolled";
		this.setDiceRoll(update + this.getDiceRoll());
		switch
		
		return rv;
	}//EOC roll
	
}//EOC Project11ColoredDie
